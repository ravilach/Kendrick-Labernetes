{
  "family": "kendrick-labernetes-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "kendrick-labernetes",
      "image": "kendrick-labernetes:latest",
      "portMappings": [
        { "containerPort": 80, "protocol": "tcp" },
        { "containerPort": 8080, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "MONGODB_URI", "value": "mongodb://<mongo-host>:27017/kendrickquotes" },
        { "name": "DB_TYPE", "value": "mongo" },
        { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" },
        { "name": "SPRING_DATASOURCE_URL", "value": "jdbc:postgresql://<postgres-host>:5432/<database>" },
        { "name": "SPRING_DATASOURCE_USERNAME", "value": "<db-username>" },
        { "name": "SPRING_DATASOURCE_PASSWORD", "value": "<db-password>" }
      ]
    }
  ]
}
